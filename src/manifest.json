{
    "name": "Vite Chrome Extension",
    "description": "A browser extension made with Svelte Kit",
    "version": "1.0.0",
    "manifest_version": 3,
    "minimum_chrome_version": "1",
    "action": {
        "default_title": "Popup",
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "matches": [
            "*://*.youtube.com/live_chat*"
        ],
        "type": "module"
    },
    "host_permissions": [
        "*://*.youtube.com/live_chat*"
    ],
    "content_scripts": [
        {
            "js": [
                "ytPageScript.js"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ],
            "run_at": "document_start"
        },
        {
            "all_frames": true,
            "js": [
                "contentScript.js"
            ],
            "matches": [
                "*://*.youtube.com/live_chat*"
            ],
            "run_at": "document_start"
        }
    ]
}
